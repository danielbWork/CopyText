{
	"manifest_version": 3,
	"name": "CopyText",
	"description": "Allows coping text from everywhere",
	"version": "1.0.0",
	"icons": {
		"48": "icons/copy-writing-48.png",
		"96": "icons/copy-writing-96.png"
	},
	"permissions": [
	"menus",
	"clipboardWrite",
	"bookmarks"],

	"host_permissions":[
		"<all_urls>"
	],
	"background": {
		"scripts":[
			"background.js"
		]
	},
	"browser_specific_settings": {
		"gecko": {
		  "id": "CopyText@daniel.bauer"
		}
	  }
	  
}